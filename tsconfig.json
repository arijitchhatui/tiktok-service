{
	"compilerOptions": {
		"target": "ES2021",
		"module": "CommonJS",
		"strict": true,
		"outDir": "dist",
		"rootDir": ".",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
